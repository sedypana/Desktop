<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:vm="using:Desktop.ViewModels"
			 xmlns:v="using:Desktop.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1366" d:DesignHeight="800"
             x:Class="Desktop.Views.OrganizeView"
			 x:DataType="vm:OrganizeViewModel">
	<StackPanel Orientation="Vertical">
		
	<StackPanel HorizontalAlignment="Center" Grid.Column="1">
			<TextBlock Text="Окно Организатора" FontSize="25" FontWeight="Bold" Margin="20"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<StackPanel Width="525">
				
				<Image Source="{Binding Ava}" Width="400" Height="500"/>
					<StackPanel Orientation="Horizontal">
						<StackPanel>
							<Button Width="200" Command="{Binding NavigatetoProf}" Height="100" Margin="40,0,0,0" CornerRadius="10">
								<TextBlock Text="Мой профиль" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
							</Button>
						</StackPanel>
						<StackPanel>
							<Button Width="200" Command="{Binding NavigatetoLogin}" Height="100" Margin="40,0,0,0" CornerRadius="10">
								<TextBlock Text="Выйти" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
							</Button>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			<StackPanel HorizontalAlignment="Center">
					<TextBlock Text="{Binding Message}" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
					<TextBlock Text="{Binding Message2}" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
				<Button Command="{Binding NavigatetoEvent}" Width="300" Height="150" Margin="0,20,0,0" CornerRadius="10">
					<TextBlock Text="Мероприятия" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
				</Button>
				<Button Width="300" Height="150" Margin="0,20,0,0" CornerRadius="10">
					<TextBlock Text="Участники" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
				</Button>
				<Button Width="300" Height="150" Margin="0,20,0,0" CornerRadius="10">
					<TextBlock Text="Жюри" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
				</Button>
			</StackPanel>
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
				<Button HorizontalAlignment="Center" Command="{Binding NavigatetoRegister}" VerticalAlignment="Center" Margin="50,110,0,0" Width="300" Height="200" CornerRadius="10">
					<TextBlock Text="Регистрация жюри/модератора" VerticalAlignment="Center" HorizontalAlignment="Center"/>
				</Button>
			</StackPanel>
		</StackPanel>
	</StackPanel>	
</UserControl>
